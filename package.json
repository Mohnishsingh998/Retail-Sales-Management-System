{
  "name": "retail-sales-management-system",
  "version": "1.0.0",
  "description": "A full-stack retail sales management system with Next.js frontend and Express backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "start": "concurrently \"pnpm --filter backend start\" \"pnpm --filter frontend start\"",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start",
    "install:all": "pnpm install",
    "clean": "pnpm --filter frontend clean && pnpm --filter backend clean && rm -rf node_modules",
    "lint": "pnpm --filter frontend lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "pnpm --filter frontend type-check"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "retail",
    "sales",
    "management",
    "dashboard",
    "nextjs",
    "express",
    "mongodb",
    "react",
    "typescript",
    "tailwindcss"
  ],
  "author": "MohnishSingh Yadav",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohnishsingh998/Retail-Sales-Management-System"
  }
}
